<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="oval" >
            <size
                android:height="20dp"
                android:width="20dp" />
            <solid android:color="@color/background_color" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="oval" >
            <size
                android:height="20dp"
                android:width="20dp" />

            <solid android:color="@color/purple" />
        </shape>
    </item>

</layer-list>